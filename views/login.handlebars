<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>

<div class="bg-image"></div>

<form class="form login-form">
  <h1>{{message}}</h1>

  {{#if create}}
  <div class="form-group">
    <div class="underline">
      <i class="fas fa-signature"></i>
      <input class="form-input" type="text" id="name-login" id="" placeholder="What's Your Name?" />
    </div>
  </div>
  {{/if}}
  <div class="form-group">
    <div class="underline">
      <i class="fas fa-user"></i>
      <input class="form-input" type="text" id="email-login" placeholder="Email" />
    </div>
  </div>
  <div class="form-group">
    <div class="underline">
      <i class="fas fa-key"></i>
      <input class="form-input" type="password" id="password-login" placeholder="Password" />
    </div>
  </div>

  <div class="form-group">
    <button class="btn" type="submit">Explore</button>
  </div>

  {{#if create}}
  <a href="/login">
    <h6>Have an Account? Login.</h6>
  </a>
  {{else}}
  <a href="/create-user">
    <h6>Create New User.</h6>
  </a>
  {{/if}}

</form>

{{#if create}}
<script src="/js/create-user.js"></script>
{{else}}
<script src="/js/login.js"></script>
{{/if}}