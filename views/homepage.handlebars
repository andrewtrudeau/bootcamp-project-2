{{!-- grid based card system that will be 3 wide with space between of the artworks --}}

<section class="container">

  {{#each artwork as |artCard|}}

    <section class="card">
      <a href="/painting/{{id}}" class='card-click'>
        <div class="card-body">
          <img src="/images/{{filename}}" alt="{{description}}">
          <h5>{{title}}</h5>
          <p>By: {{artist}}</p>
        </div>
      </a>
    </section>

    {{/each}}
</section>

<script src='../public/js/click-artwork.js'></script>






